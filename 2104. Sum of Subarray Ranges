class Solution {
public:
    int sumSubarrayMins(vector<int>& nums) {
        long long sum = 0, mod = 1e9 + 7;
        for(int i = 0;i < nums.size();i++){
            long long mini = nums[i];
            for(int j = i;j < nums.size();j++){
                if(mini > nums[j])
                    mini = nums[j];
                sum = sum + mini;
            }
        }
        return sum % mod;
    }
};
